.chat-main__groupes__box{data: {message: {id: message.id}}}
  .chat-main__groupes__box__group
    .chat-main__groupes__box__group__name
      = message.user.name
    .chat-main__groupes__box__group__data
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chat-main__groupes__box__content
    - if message.content.present?
      %p.Message__content
        = message.content
    = image_tag message.image_url, class: 'Message__image' if message.image.present?