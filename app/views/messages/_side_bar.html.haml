.chat-side
  .chat-side__header
    .chat-side__header__box
      %p.side-header__box__user-namerails 
        = current_user.name
        -# 現在のユーザー名を表示
      %ul.chat-side-header__box__menu
        %li.chat-side-header__box__menu__new-group
          = link_to new_group_path do
            = icon('far', 'edit', class:'')
          = link_to edit_user_path(current_user) do
            = icon('fa', 'cog')
  .chat-side__groupes
    -# ⬇︎「現在のユーザー」を「group」に代入
    - current_user.groups.each do |group|
      .chat-side__groupes__group
        = link_to group_messages_path(group) do
          %p.chat-side__groupes__group__name
            = group.name
          %p.chat-side__groupes__group__message
            = group.show_last_message